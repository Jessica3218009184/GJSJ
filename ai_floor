    <script>
        // 完整的部门数据（5-8楼）
        const departmentMap = {
            // 5楼
            '岩土二所': '5楼',
            '创研二所': '5楼',
            '创研一所': '5楼',
            '人防设计所': '5楼',
            '东莞分公司': '5楼',
            '古色所': '5楼',
            '建筑七所': '5楼',
            '市政设计一院': '5楼',
            '环保一所': '5楼',
            '建筑一所': '5楼',
            '第一综合设计院': '5楼',
            '第一综合设计院设备所': '5楼',
            '水利二所': '5楼',
            '市政设计二院': '5楼',
            '城建七所': '5楼',
            '城建九所': '5楼',
            
            // 6楼
            '审图公司': '6楼',
            '市场营销中心': '6楼',
            '环艺二所': '6楼',
            '环艺一所': '6楼',
            '环艺三所': '6楼',
            '华凯数字所': '6楼',
            '规划咨询设计院-市政规划所': '6楼',
            '规划五所': '6楼',
            '项目管理中心': '6楼',
            '规划一所': '6楼',
            '规划研究所': '6楼',
            '智能化一所': '6楼',
            
            // 7楼
            '办公室': '7楼',
            '经营发展部': '7楼',
            '党群人事部': '7楼',
            '财务部': '7楼',
            '科技信息部': '7楼',
            '审图中心': '7楼',
            '方案中心': '7楼',
            
            // 8楼
            '规划二所': '8楼',
            '城建一所': '8楼',
            '设备二所': '8楼',
            '设备一所': '8楼',
            '第一建筑设计院': '8楼',
            '第二建筑设计院': '8楼',
            '第三建筑设计院': '8楼',
            '城设四所': '8楼',
            '博创所': '8楼',
            '规划咨询设计院-工程咨询所': '8楼',
            '建筑四所': '8楼',
            '城创七所': '8楼',
            '城建五所': '8楼'
        };
        
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const resultDiv = document.getElementById('result');
        const floorCards = document.querySelectorAll('.floor-card');
        const floorNavBtns = document.querySelectorAll('.floor-nav-btn');
        
        // 获取模态框元素
        const modal = document.getElementById("imageModal");
        const modalImg = document.getElementById("expandedImage");
        const closeBtn = document.getElementsByClassName("close")[0];
        
        // 搜索函数
        function searchDepartment() {
            const searchTerm = searchInput.value.trim().toLowerCase();
            
            if (!searchTerm) {
                resultDiv.innerHTML = "请输入部门名称";
                resultDiv.classList.remove('highlight');
                return;
            }
            
            let found = false;
            let resultHtml = "";
            
            // 遍历部门映射
            for (const [department, floor] of Object.entries(departmentMap)) {
                if (department.toLowerCase().includes(searchTerm)) {
                    found = true;
                    const highlightedDept = department.replace(
                        new RegExp(searchTerm, 'gi'), 
                        match => `<span class="match-highlight">${match}</span>`
                    );
                    
                    resultHtml += `
                        <div class="result-item fade-in">
                            <div class="dept-info">
                                <i class="fas fa-building"></i>
                                <span>${highlightedDept}</span>
                            </div>
                            <div style="display:flex; align-items:center; gap:15px;">
                                <span class="floor-tag">${floor}</span>
                                <button class="floor-nav-btn navigate-btn" data-floor="${floor.charAt(0)}">
                                    <i class="fas fa-location-arrow"></i> 导航
                                </button>
                            </div>
                        </div>
                    `;
                }
            }
            
            if (found) {
                resultDiv.innerHTML = resultHtml;
                resultDiv.classList.add('highlight');
                
                // 添加导航按钮事件
                document.querySelectorAll('.navigate-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const floor = this.getAttribute('data-floor');
                        navigateToFloor(floor);
                    });
                });
            } else {
                resultDiv.innerHTML = `
                    <div class="result-item">
                        <i class="fas fa-exclamation-circle"></i>
                        未找到包含"<span class="match-highlight">${searchTerm}</span>"的部门
                    </div>
                `;
                resultDiv.classList.remove('highlight');
            }
        }
        
        // 楼层导航
        function navigateToFloor(floorNum) {
            // 关闭所有卡片
            floorCards.forEach(card => {
                card.classList.remove('open');
            });
            
            // 打开目标楼层卡片
            const targetCard = document.querySelector(`.floor-card[data-floor="${floorNum}"]`);
            if (targetCard) {
                targetCard.classList.add('open');
                targetCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
                
                // 更新导航按钮状态
                floorNavBtns.forEach(btn => {
                    btn.classList.remove('active');
                    if(btn.getAttribute('data-floor') === floorNum) {
                        btn.classList.add('active');
                    }
                });
            }
        }
        
        // 图片放大功能
        function setupImageModal() {
            // 获取所有地图图片容器
            const mapContainers = document.querySelectorAll('.map-container');
            
            mapContainers.forEach(container => {
                container.addEventListener('click', function() {
                    const img = this.querySelector('.map-image');
                    modal.style.display = "block";
                    modalImg.src = img.src;
                });
            });
            
            // 关闭按钮事件
            closeBtn.onclick = function() {
                modal.style.display = "none";
            }
            
            // 点击模态框背景关闭
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        }
        
        // 事件监听
        searchButton.addEventListener('click', searchDepartment);
        searchInput.addEventListener('keyup', function(event) {
            if (event.key === 'Enter') {
                searchDepartment();
            }
        });
        
        // 楼层卡片折叠/展开
        floorCards.forEach(card => {
            const header = card.querySelector('.floor-header');
            header.addEventListener('click', () => {
                card.classList.toggle('open');
            });
        });
        
        // 楼层导航按钮
        floorNavBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const floor = this.getAttribute('data-floor');
                navigateToFloor(floor);
            });
        });
        
        // 初始打开5楼
        window.onload = function() {
            navigateToFloor('5');
            setupImageModal();
        };
    </script>
</body>
</html>
